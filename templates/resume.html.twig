<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <title>Resume</title>
</head>
<body>
    <main>
        <section class="left">
            <div class="left-image">
                <img src="{{ data.user_data.avatar_url }}" alt="">
                <h2>{{ data.user_data.name }}</h2>
                <div class="personal">
                    <ul>
                        {% if data.user_data.email %}<li><i class="fas fa-envelope"></i> {{ data.user_data.email }}</li>{% endif %}
                        {% if data.user_data.blog %}<li><i class="fa-solid fa-sitemap"></i> {{ data.user_data.blog }}</li>{% endif %}
                        {% if data.user_data.company %}<li><i class="fa-solid fa-building"></i> {{ data.user_data.company }}</li>{% endif %}
                        {% if data.user_data.location %}<li><i class="fas fa-location-arrow"></i> {{ data.user_data.location }}</li>{% endif %}
                    </ul>
                    <hr>
                </div>
                <div class="skills">
                    <h2><i class="fas fa-cog"></i> Skills</h2>
                    <ul>
                        {% if data.language_percentages %}
                            {% for language, percentage in data.language_percentages %}
                            <li><p>{{ language }}</p> <progress max="100" value="{{ percentage }}"></progress></li>
                            {% endfor %}
                        {% endif %}
                    </ul>
                </div>
            </div>
        </section>
        <section class="right">
            <div class="projects">
                <h2><i class="fas fa-briefcase"></i>{% if data.repo_data|length > 1 %} {{ data.repo_data|length }} Projects {% elseif data.repo_data|length == 1 %} 1 Project {% else %} No Projects {% endif %}</h2>
                <ul>
                    {% if data.repo_data %}
                        {% for project in data.repo_data %}
                            <li><i class="fa-solid fa-code"></i><a href="{{ project.html_url }}"> {{ project.name }}</a></li>
                            <li class="date"><i class="fas fa-calendar"></i> {{ project.created_at }}</li>
                            <li><p> {{ project.description }}</p></li>
                        {% endfor %}
                    {% endif %}
                </ul>
            </div>
        </section>
    </main>
</body>
</html>
